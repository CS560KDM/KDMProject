<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".User_Report" >

   

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
			 android:layout_margin="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/usename"
                     android:textSize="25dp"
                    android:background="@drawable/boder"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="User name" />

                <TextView
                     android:textSize="25dp"
                    android:id="@+id/usenameValue"
                    android:background="@drawable/boder"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="hw" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
             android:layout_margin="1dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/age"
                     android:textSize="25dp"
                    android:background="@drawable/boder"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Age:" />

                <TextView
                     android:textSize="25dp"
                    android:id="@+id/ageValue"
                    android:background="@drawable/boder"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="hw" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="#FFFFFF"
             android:layout_margin="1dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                     android:textSize="25dp"
                    android:id="@+id/weight"
                    android:background="@drawable/boder"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Weight :" />

                <TextView
                     android:textSize="25dp"
                    android:id="@+id/weightValue"
                    android:layout_width="100dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="hw" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/height"
                     android:textSize="25dp"
                    android:layout_width="130dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="Health" />

                <TextView
                    android:id="@+id/heightValue"
                     android:textSize="25dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/calorie"
                     android:textSize="25dp"
                    android:layout_width="130dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="Calories:" />

                <TextView
                    android:id="@+id/calorieValue"
                     android:textSize="25dp"
                    android:layout_width="100dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="hw" />
            </LinearLayout>
        </TableRow>
         <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/bmr"
                     android:textSize="25dp"
                    android:layout_width="130dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="BMR:" />

                <TextView
                    android:id="@+id/bmrValue"
                     android:textSize="25dp"
                    android:layout_width="100dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="hw" />
            </LinearLayout>
        </TableRow>
         <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/stomp"
                     android:textSize="25dp"
                    android:layout_width="130dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="No_Action:" />

                <TextView
                    android:id="@+id/stompValue"
                     android:textSize="25dp"
                    android:layout_width="100dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="hw" />
            </LinearLayout>
        </TableRow>
             <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/calburn"
                     android:textSize="25dp"
                    android:layout_width="130dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="Cal Burnt:" />

                <TextView
                    android:id="@+id/calburnValue"
                     android:textSize="25dp"
                    android:layout_width="100dp"
                    android:background="@drawable/boder"
                    android:layout_height="wrap_content"
                    android:text="hw" />
            </LinearLayout>
        </TableRow>
         <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

              <ImageView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/achievement_button" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    

</RelativeLayout>