<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008b8b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".User_Report" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/usename"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="User name"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/usenameValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/age"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="Age:"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/ageValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="Weight :"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/weightValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/height"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="Health"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/heightValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/calorie"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="Calories:"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/calorieValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/bmr"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="BMR:"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/bmrValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/stomp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="No_Action:"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/stompValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/calburn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="Cal Burnt:"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/calburnValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:text="hw"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <!--
                     <ImageView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/achievement_button" />
                -->
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="#1e2bce"
        android:text="mals"
        android:textColor="#fffaf0"
        android:textSize="25dp" />

</RelativeLayout>